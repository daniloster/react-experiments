{
  "name": "daniloster-base-styles",
  "version": "1.1.0",
  "description": "This base styles package defines theme colors and layouts",
  "main": "lib/index.scss",
  "nyc": {
    "require": ["babel-register"],
    "include": ["src/**/*.js", "src/*.js"],
    "exclude": ["src/**/*.spec.js", "test", "build", "dist", "lib", "mochawesome-reports"],
    "sourceMap": false,
    "instrument": false
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check-coverage": "exit 0",
    "coverage": "exit 0",
    "compile": "babel src --out-dir lib --copy-files --source-maps",
    "test": "exit 0",
    "build": "exit 0",
    "prepublish": "exit 0",
    "doc": "exit 0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "cross-env": "5.0.5",
    "enzyme": "3.1.0",
    "eslint": "3.19.0",
    "mocha": "3.5.3",
    "mochawesome": "2.3.1",
    "nyc": "10.0.0",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.2"
  }
}
